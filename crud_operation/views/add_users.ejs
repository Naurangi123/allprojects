<%- include('layouts/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card card-shadow shadow-lg">
                <div class="card-header bg-primary">
                    <h2 class="card-title text-center mb-4 text-light">Add Users</h2>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" enctype="multipart/form-data" id="add-form">
                        <div class="mb-3">
                            <input type="text" name="name" class="form-control form-control-lg" id="name" placeholder="Name">
                        </div>
                        <div class="mb-3">
                            
                            <input type="email" name="email" class="form-control form-control-lg" id="email" placeholder="Email">
                        </div>
                        <div class="mb-3">
                            
                            <input type="tel" name="phone" class="form-control form-control-lg" id="phone" placeholder="Phone No">
                        </div>
                        <div class="mb-3">
                            
                            <input type="file" name="image" class="form-control form-control-lg" id="image">
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" name="submit" value="Add Users" class="btn btn-primary btn-lg">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layouts/footer') %>