<%- include('layouts/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message && message.type && message.text) { %>
                <div class="alert alert-<%= message.type %>">
                    <%= message.text %>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if (users) { %> <!-- Corrected syntax -->
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone no.</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %> <!-- Adjusted index to start from 1 -->
                                <tr>
                                    <td><%= index + 1 %></td> <!-- Adjusted index to start from 1 -->
                                    <td><img src="<%= row.image %>" alt="user img" width="50" class="img-thumbnail"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td><a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit mx-1"></i></a><a href="/delete/<%= row._id%>" class="text-danger"><i class="fas fa-trash mx-1"></i></a></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found</h1> <!-- Adjusted indentation -->
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>
